<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_darker_gray_bg"
    android:clickable="false"
    android:enabled="false"
    android:focusable="false" >

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
     android:focusable="false"
     android:clickable="false"
     android:enabled="false"
    android:background="@color/color_darker_gray_bg" >

  

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="25dp"
        android:maxHeight="1dip"
        android:minHeight="1dip"
        android:resizeMode="horizontal|vertical"
        android:scaleType="fitXY"
        android:src="@drawable/straightline" />

    <ImageView
        android:id="@+id/profile_icon_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="2dp"
        android:layout_toLeftOf="@+id/txtLabel"
        android:contentDescription="@string/streams_logo"
        android:src="@drawable/profile_icon" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_userid_scrollview"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:maxHeight="1dip"
        android:minHeight="1dip"
        android:resizeMode="horizontal|vertical"
        android:scaleType="fitXY"
        android:src="@drawable/straightline" />

    <HorizontalScrollView
        android:id="@+id/profile_userid_scrollview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/profile_icon_image"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="14dp"
        android:layout_toRightOf="@+id/profile_icon_image" >

        <TextView
            android:id="@+id/profile_userid_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollHorizontally="true"
            android:scrollbars="horizontal"
            android:singleLine="true"
            android:text="Profile View"
            android:textColor="@color/color_off_white"
            android:textSize="16sp" />
    </HorizontalScrollView>
    
    
    
    
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView3"
        android:layout_alignRight="@+id/imageView3"
        android:layout_below="@+id/imageView3"
        android:layout_marginTop="10dp"
        android:focusable="false"
        android:clickable="false"
        android:orientation="vertical" >
        
        
        <TextView
            android:id="@+id/profile_orders_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="com.glowdeck.streams.orders (0)"
            android:enabled="true"
            android:gravity="center"
            android:textAlignment="gravity"
            android:freezesText="true"
            android:padding="5dip" 
            android:background="@color/color_streams_blue"
        	android:textColor="@color/color_white"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/first_name_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First Name"
            android:layout_marginTop="10dp"
            android:textColor="@color/color_off_white"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/first_name_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginTop="10dp"
            android:padding="5dip" 
            android:background="@color/color_login_edittext"
        	android:textColor="@color/color_white"
        	android:imeOptions="flagNoExtractUi"
            android:inputType="textPersonName" />

         <TextView
            android:id="@+id/last_name_textview"
            android:textColor="@color/color_off_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Last Name"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/last_name_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginTop="10dp"
        	android:padding="5dip" 
            android:background="@color/color_login_edittext"
        	android:textColor="@color/color_white"
        	android:imeOptions="flagNoExtractUi"
            android:inputType="textPersonName" />
        
         <TextView
            android:id="@+id/address_textview"
            android:textColor="@color/color_off_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Address"
            android:textAppearance="?android:attr/textAppearanceMedium" />
         
         <EditText
            android:id="@+id/address_one_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginTop="10dp"
        	android:padding="5dip" 
            android:background="@color/color_login_edittext"
        	android:textColor="@color/color_white"
        	android:imeOptions="flagNoExtractUi"
            android:inputType="textPostalAddress" />
         <EditText
            android:id="@+id/address_two_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginTop="10dp"
        	android:padding="5dip" 
            android:background="@color/color_login_edittext"
        	android:textColor="@color/color_white"
        	android:imeOptions="flagNoExtractUi"
            android:inputType="textPostalAddress" />
         
          <EditText
            android:id="@+id/address_three_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginTop="10dp"
        	android:padding="5dip" 
            android:background="@color/color_login_edittext"
        	android:textColor="@color/color_white"
        	android:imeOptions="flagNoExtractUi"
            android:inputType="textPostalAddress" />
         <TextView
            android:id="@+id/city_textview"
            android:textColor="@color/color_off_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="City"
            android:textAppearance="?android:attr/textAppearanceMedium" />
          <EditText
            android:id="@+id/city_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginTop="10dp"
        	android:padding="5dip" 
            android:background="@color/color_login_edittext"
        	android:textColor="@color/color_white"
        	android:imeOptions="flagNoExtractUi"
            android:inputType="textPostalAddress" />
           <TextView
            android:id="@+id/state_textview"
            android:textColor="@color/color_off_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="State"
            android:textAppearance="?android:attr/textAppearanceMedium" />
             
          <Spinner
        	android:id="@+id/state_spinner"
       		android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginTop="10dp"
        	android:padding="5dip" 
           
        	android:textColor="@color/color_white"
        	android:spinnerMode="dialog"
        	android:background="@color/color_login_edittext"

        	android:prompt="@string/select_state" />
          
           <TextView
            android:id="@+id/postalcode_textview"
            android:textColor="@color/color_off_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Postal Code"
            android:textAppearance="?android:attr/textAppearanceMedium" />
          <EditText
            android:id="@+id/postalcode_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginTop="10dp"
        	android:padding="5dip" 
            android:background="@color/color_login_edittext"
        	android:textColor="@color/color_white"
        	android:imeOptions="flagNoExtractUi"
        	android:inputType="textPostalAddress"
            />
          <!-- android:inputType="numberDecimal"  -->
           <TextView
            android:id="@+id/country_textview"
            android:textColor="@color/color_off_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Country"
            android:textAppearance="?android:attr/textAppearanceMedium" />
          <!--
                    android:popupBackground="#FF0000"
                    android:background="@color/color_login_edittext"
                      -->
           <Spinner
        	android:id="@+id/country_spinner"
       		android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginTop="10dp"
        	android:padding="5dip" 
           
        	android:textColor="@color/color_white"
        	android:spinnerMode="dialog"
        	android:background="@color/color_login_edittext"

        	android:prompt="@string/select_country" />
          
          
           <TextView
            android:id="@+id/phone_textview"
            android:textColor="@color/color_off_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Phone"
            android:textAppearance="?android:attr/textAppearanceMedium" />
          <EditText
            android:id="@+id/phone_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginTop="10dp"
        	android:padding="5dip" 
            android:background="@color/color_login_edittext"
        	android:textColor="@color/color_white"
        	android:imeOptions="flagNoExtractUi"
            android:inputType="phone" />

          <Button
              android:id="@+id/profile_update_button"
              style="?android:attr/buttonStyleSmall"
              android:layout_width="90dp"
              android:layout_height="30dp"
              android:layout_gravity="right"
              android:layout_marginBottom="40dp"
              android:layout_marginTop="10dp"
              android:typeface="sans"
              android:background="@drawable/login_newaccount_button_selector"
              android:textColor="@color/color_white"
              android:text="UPDATE" />

    </LinearLayout>

    
   
</RelativeLayout>

 </ScrollView>